{
  "extends": "./tsconfig.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/services/*.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vite/client", "vite-plugin-vue"]
  }
}
